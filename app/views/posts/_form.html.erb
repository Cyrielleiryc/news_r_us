<%= simple_form_for post do |f| %>
  <%= f.input :title, label: "Titre" %>
  <%= f.input :url, label: "Lien de l'article" %>
  <%= f.input :content, label: "Contenu de l'article", input_html: { rows: 10 } %>
  <%= f.input :photo, as: :file %>
  <% if post.new_record? %>
    <%= f.button :submit, "Envoyer l'article", class: "cta-add-comment" %>
  <% else %>
    <%= f.button :submit, "Modifier l'article", class: "cta-add-comment" %>
  <% end %>
<% end %>
