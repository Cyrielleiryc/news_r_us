<div class="container mt-3 mb-5">
  <% if params[:query].present? %>
    <h1><%= @posts.size == 0 ? "Aucun résultat " : "Résultats " %>pour "<%= params[:query] %>"</h1>
  <% else %>
    <h1>Toutes les publications</h1>
  <% end %>
  <div class="all-posts">
    <% @posts.each do |post| %>
      <%= render 'card', post: post %>
    <% end %>
  </div>
</div>
